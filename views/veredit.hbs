<main>
{{#each results}}
  <form action="{{id}}" method="post">

    <div class="py-5 text-center">
     
      <h2>Actualización de datos</h2>
      <h4>ID número {{id}}</h4>
      
    </div>

    <div class="row g-5">

      <div class="col-md-7 col-lg-8">
      
        <form class="needs-validation" novalidate="">
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="firstName" class="form-label">Usuario</label>
              <input type="text" class="form-control" id="firstName" placeholder="{{usuario}}" name="usuario" required="">
              <div class="invalid-feedback">
                Este campo es requerido.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="lastName" class="form-label">Contraseña</label>
              <input type="text" class="form-control" id="lastName" placeholder="{{contrasena}}" name="contrasena" required="">
              <div class="invalid-feedback">
                Este campo es requerido.
              </div>
            </div>

           

          <hr class="my-4">
          <div class="col-sm-3">

              <button class="w-100 btn btn-danger btn-lg" type="submit">Guardar datos</button>
              

          </div>

       


        
        </form>
      </div>
    </div>
    {{/each}}
    </form>
  </main>