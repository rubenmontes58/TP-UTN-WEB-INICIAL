        <thead>
          
            <tr>
                <th>ID</th>
                <th>Nombre y Apellido</th>
                <th>Dirección para retirar Paquete</th>
                <th>Provincia</th>
                <th>Ciudad</th>
                <th>Franja horaria para retirar el paquete</th>
                <th>Fecha para retirar el paquete</th>
                <th>Caracteristicas</th>
                <th>Dni Autorizado a Rerirar el paquete</th>
                <th>Fecha de Entrega</th>
                <th>Hora de Entrega</th>
                <th>Direccion de Entrega</th>
                <th>Ciudad de Entrega</th>
                <th>Provincia de Entrega</th>
                <th>Precio</th>
                
                

            </tr>
        </thead>
        <tbody>
           {{#each results}}
            <tr>
                <td>{{id}}</td>
                <td>{{nombreyapellido}}</td>
                <td>{{dirretiro}}</td>
                <td>{{provincia}}</td>
                <td>{{ciudad}}</td>
                <td>{{hora}}</td>
                <td>{{fecha}}</td>
                <td>{{caracteristicas}}</td>
                <td>{{dniretiro}}</td>
                <td>{{fechaentrega}}</td>
                <td>{{horaentrega}}</td>
                <td>{{direntrega}}</td>
                <td>{{ciudadentrega}}</td>
                <td>{{provinciaentrega}}</td>
                <td>{{precio}}</td>
           
            </tr>
            {{/each}} 
        </tbody>
        <div class="text-center">
          <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Modificar
</button>
        </div>
       

    </table>


<!-- Button trigger modal -->

<!-- Modal -->
<form action="/edit" method="post">


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
        
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modificación</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label"></label>
  <input type="text" class="form-control" name="nombreyapellido" placeholder="">
</div>
<div>
   {{#each results}}
   ESTAS MODIFICANDO EL ID N°{{id}}
    {{/each}}
</div>


      
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</form>           
         
  
 


